{
  "name": "display_chrome_cast",
  "version": "0.1.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.nwm.display_chrome_cast",
    "productName": "Display Chrome Cast",
    "files": [
      "src/**/*",
      "app/**/*",
      "config/**/*",
      "public/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ],
      "icon": "app/assets/images/display_chrome_cast.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "keywords": [],
  "author": "Nolwenn WEBER-MARQUISET",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "chrome-launcher": "^1.2.1",
    "express": "^5.1.0"
  }
}
